            </div>
        </div>

        <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    @*<input type="button" class="btn btn-default" value="Save" onclick="DeletePhoto()"/>*@
                    <button type="submit" id="btnDelete" name="btnDelete" value="Delete" class="btn btn-primary" style="margin-left:5px;">Delete</button>
                    <button type="button" class="btn btn-primary" data-dismiss="modal">Cancel</button>
                </div>
            </div>
    </div>
