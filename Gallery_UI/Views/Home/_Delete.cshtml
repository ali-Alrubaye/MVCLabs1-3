                @Html.EditorFor(model => model.PhotoPath, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly" } })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.AlbumId, "AlbumId", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @*@Html.LabelFor(model => model.AlbumId, new { htmlAttributes = new { @class = "form-control" } })*@
