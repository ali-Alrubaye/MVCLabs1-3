@model IEnumerable<ViewModels.Models.PhotoViewModel>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.AlbumPhV.AlbumName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.PhotoName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.PhotoDate)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Description)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.PhotoPath)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.AlbumPhV.AlbumName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PhotoName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PhotoDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                @*@Html.DisplayFor(modelItem => item.PhotoPath)*@
                <div class="col-lg-4">
                    <img class="img-thumbnail" src="~/GalleryImages/@item.PhotoPath" alt="fdf" width="500" height="500">
                </div>
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.PhotoId }) |
                @Html.ActionLink("Details", "Details", new { id = item.PhotoId }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.PhotoId })
            </td>
        </tr>
    }

</table>
