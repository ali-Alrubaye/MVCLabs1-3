
<!-- Main List -->
<div class="">
    <div class="row">

        @foreach (var item in Model)
        {

            <div class="col-lg-4 col-md-6 col-sm-6 col-xs-12">
                <div class="thumbnail albums">

                    @*<a href="#" class="">*@
                    <div class="caption" >
                        <h3>Album Info.</h3>
                        <h4 class="">@item.AlbumName</h4>
                        <p class="">@item.Description </p>
                        <p class="">@item.AlbumDate </p>
                        @*<button id="editbtn" class="btn btn-info" type="button">Edit</button>*@
                        @*<button type="button" id=@item.AlbumId class="btn btn-info " data-toggle="modal" data-target="#myModal">Edit</button>*@
                        <button type="button" id=@item.AlbumId class="btn btn-success" data-toggle="modal" data-target="#myModal2" onclick="AddCommenttoAlb(id)">
                            Add Comment
                        </button>
                        <button type="button" id=@item.AlbumId class="btn btn-primary" data-toggle="modal" data-target="#myModal2" onclick="EditAlb(id)">
                            Edit
                        </button>

                        <button type="button" id=@item.AlbumId class="btn btn-danger" data-toggle="modal" data-target="#myModal2" onclick="DeleteAlb(id)">
                            Delete
                        </button>
                        <div id="result" style="display: none;"></div>
                    </div>
                    <img src="~/Load/windows7folder.png" alt="@item.AlbumName" class="Alblist">
                    @*</a>*@
                </div>
            </div>
        }
    </div>
</div>
<!-- End Main List -->
<style>
    
     .thumbnail > .Alblist {
         width: 100%;
         height: 100%;
     }
   
</style>